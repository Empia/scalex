#!/bin/sh

JVM_OPTIONS="-Dhttp.port=9010 -Dscalac.patmat.analysisBudget=off"
PLAY_VERSION="2.1.2-RC1"
name="play-$PLAY_VERSION" 
file="$name.zip" 
url="http://downloads.typesafe.com/play/$PLAY_VERSION/$file" 

# install play2 if missing (first run)
if [ ! -f $name/play ]; then
  echo
  echo "Proceeding to $name installation"
  echo
  echo "  - Downloading $url"
  curl -o $file $url
  echo "  - Installing $name"
  unzip $file > /dev/null
  rm $file
  echo "  - $name downloaded and installed successfuly"
fi

$name/play $JVM_OPTIONS "$@"
